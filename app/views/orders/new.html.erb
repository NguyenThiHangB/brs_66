<% provide :title, t(".title") %>
<h2><%= t ".title" %></h2>

<div class="row full-screen">
  <div class="row">
    <%= form_for @order do |f| %>
      <div class="col-md-8">
        <%= render "shared/error_messages", object: f.object %>
        <div class="detail">
	      <div class="form-group">
	        <%= f.text_field :full_name, placeholder: t(".full"), class: "input form-control" %>
	      </div>
          <div class="form-group">
            <%= f.text_field :phone, placeholder: t(".phone"), class: "input form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_field :address, placeholder: t(".address"), class: "input form-control" %>
          </div>
        </div>	
      </div>
	  <div class="order-detail">
	    <div class="order-col">
	      <div><strong>TOTAL</strong></div>
	      <div><strong class="order-total"><%= total_money %> </strong></div>
	    </div>
	    <%= f.submit "Order now", class: "btn btn-primary" %>
	  </div>
	  <%= hidden_field_tag "order[user_id]", current_user.id %>
    <% end %>
  </div>
</div>
