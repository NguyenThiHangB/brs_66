<% provide :title, @book.name %>
<div class="row">
  <div class="col-sm-6">
    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag @book.image, class: "show-book" %>
      </div>
    </div>
    <% if current_user %>
      <span>
        <%= t ".level" %> <%= rating_for @book, "rating",
        stars: Settings.rate.stars, disable_after_rate: false,
        half_show: false %>
      </span>
    <% end %>
    <hr>
    <%= render "like_form" %>
  </div>
  <div class="col-sm-6">
    <div class="title">
      <span class="title-book"><%= @book.name %></span>
    </div>
    <div class="description">
      <%= t ".level" %>
      <%= @book.average("rating").present? ? @book.average("rating").avg : 0 %> -
      <%= @book.rates("rating").count %>
      <hr>
      <%= @book.description %>
    </div>
  </div>
</div>
<h3><%= t ".comment" %> (<%= @book.comments.count %>)</h3>
<div class="row">
  <%= render "comment_form" %>
</div>
<div class="comment"></div>
<%= render @comments %>

