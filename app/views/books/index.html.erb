<% provide :title, t(".title") %>
  <%= form_tag books_path, method: "get", enforce_utf8: false do %>
    <div class="form-group top_search">
      <div class="input-group col-sm-12">
        <div class="col-md-6">
          <%= label_tag :name_book %>
          <%= text_field_tag :name, params[:name], class: "form-control" %>
        </div>
        <div class="col-md-3">
          <%= label_tag :categories %>
          <select name="category_id" class="form-control">
            <option value=""></option>
            <% @categories.each do |category| %>
            <option value="<%= category.id %>"><%= category.title %></option>
            <% end %>
          </select>
        </div>
        <div class="col-md-3">
          <%= label_tag :author %>
          <select name="author_id" class="form-control">
            <option value=""></option>
            <% @authors.each do |author| %>
            <option value="<%= author.id %>"><%= author.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="form-group col-sm-12 search">
        <%= submit_tag t(".search"), name: nil, class: "btn btn-info"  %>
      </div>
  <% end %>
</div>
<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-3">
      <div class="index-book">
        <%= image_tag book.image, class: "book" %>
      <div class="content-book">
        <%= link_to book.name, book %>
        <p class="price"><%= book.price %> <%= t ".$" %></p>
      </div>
      </div>
    </div>
  <% end %>
</div>
