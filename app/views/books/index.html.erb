<% provide :title, t(".title") %>
<%= render "search" %>
<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-3">
      <div class="index-book">
        <%= image_tag book.image_url, class: "book" %>
        <div class="content-book">
          <%= link_to book.name, book %>
          <p class="price"><%= book.price %> <%= t ".$" %></p>
        </div>&nbsp;
        <span class="glyphicon glyphicon-thumbs-up"></span> <%= book.likes.count %> <%= t ".like" %>&nbsp;
        <span class="glyphicon glyphicon-comment"></span> <%= book.comments.count %> <%= t ".comment" %>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @books, theme: "twitter-bootstrap-3"%>
