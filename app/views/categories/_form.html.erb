<%= form_for @category do |f| %>
  <%= render "shared/error_messages", object: @category %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", placeholder: t(".description"), rows: Settings.category.rows %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <%= link_to t(".back"), categories_path, class: "btn btn-info" %>
<% end %>
