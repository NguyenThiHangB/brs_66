<%= simple_form_for [:admin, @book], html: {multipart: true}, remote: true do |f| %>
  <%= render "shared/error_messages", object: @book %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", placeholder: t(".description"), rows: 3 %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :publish_date %>
    <%= f.date_field :publish_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.association :category, input_html: {class: "chosen-select"} %>
  </div>
  <div class="form-group">
    <%= f.association :authors, multiple: true,
      input_html: {class: "chosen-select"} %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <%= link_to t(".back"), admin_books_path, class: "btn btn-info" %>
<% end %>
