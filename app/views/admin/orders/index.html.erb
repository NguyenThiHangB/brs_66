<% provide :title, t(".title") %>
<h2><%= t ".title" %></h2>
<div class="chose">
  <button id="chose-unchecked" class="btn-primary btn"><%= t ".uncheck-list" %></button>
  <button id="chose-checked" class="btn-primary btn"><%= t ".checked-list" %></button>
</div>
<br>
<div class="row">
  <div class="unchecked-list list">
    <h5><%= t ".list_uncheck" %></h5>
    <div class="list-order col-md-12">
      <% if @order_unchecked.present? %>
        <table class="table table-hover">
          <tr>
            <thead class="thead-dark">
              <tr>
                <td><%= t ".id" %></td>
                <td><%= t ".username" %></td>
                <td><%= t ".email" %></td>
                <td><%= t ".create_at" %></td>
                <td><%= t ".total" %></td>
                <td><%= t ".action" %></td>
              </tr>
            </thead>
            <tbody>
              <% @order_unchecked.each do |order| %>
                <tr>
                  <td><%= order.id %></td>
                  <td><%= order.user.username %></td>
                  <td><%= order.user.email %></td>
                  <td><%= l(order.created_at, format: :default) %></td>
                  <td><%= order.total %></td>
                  <td><%= link_to t(".check"), admin_order_path(order.id, status: :checked), method: :put, class: "btn btn-primary" %></td>
                </tr>
              <% end %>
            </tbody>
          </tr>
        </table>
      <% else %>
        <p class="empty-order"><%= t ".empty-order" %></p>
      <% end %>
    </div>  
  </div>
  <div class="checked-list list" style="display: none;">
    <h5><%= t ".list_checked" %></h5>
    <div class="list-order col-md-12">
      <% if @order_checked.present? %>
        <table class="table table-hover">
          <tr>
            <thead class="thead-dark">
              <tr>
                <td><%= t ".id" %></td>
                <td><%= t ".username" %></td>
                <td><%= t ".email" %></td>
                <td><%= t ".create_at" %></td>
                <td><%= t ".total" %></td>
              </tr>
            </thead>
            <tbody>
              <% @order_checked.each do |order| %>
                <tr>
                  <td><%= order.id %></td>
                  <td><%= order.user.username %></td>
                  <td><%= order.user.email %></td>
                  <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
                  <td><%= order.total %></td>
                </tr>
              <% end %>
            </tbody>
          </tr>
        </table>
      <% else %>
        <p class="empty-order"><%= t ".empty-order" %></p>
      <% end %>
    </div>
  </div>
</div>
