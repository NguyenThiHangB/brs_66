<%= form_for [:admin, @author] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :birth %>
  <%= f.date_field :brith_year, class: "form-control" %>

  <%= f.label :country %>
  <%= f.text_field :country, class: "form-control" %>

  <%= f.label :biography %>
  <%= f.text_area :biography, class: "form-control", rows: 3 %>
  <br>
  <%= f.submit t(".creates"), class: "btn btn-primary" %>
<% end %>
