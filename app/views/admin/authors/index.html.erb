<% provide :title, t(".title") %>
<h1><%= t ".ls_au" %></h1>
<div class="row">
  <div class="col-md-4">
    <%= link_to t(".create"), new_admin_author_path, class: "btn btn-info" %>
  </div>
  <div class="col-md-8">
    <%= form_tag admin_authors_path, method: "get", enforce_utf8: false do %>
    <div class="row">
      <div class="col-md-10">
        <%= text_field_tag :search, params[:search], class: "form-control",
          placeholder: t(".name") %>
      </div>
      <div class="col-md-2">
        <%= submit_tag t(".search"), name: nil, class: "btn btn-info" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
</br>
<%= paginate @authors, theme: "twitter-bootstrap-3"%>
<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t ".stt" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".date_of_birth" %></th>
      <th><%= t ".country" %></th>
      <th><%= t ".biography" %></th>
      <th class="table-th" colspan="2" ><%= t ".active" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render "show_list" %>
  </tbody>
</table>
<%= paginate @authors, theme: "twitter-bootstrap-3" %>
